<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <!-- <xacro:property name="tf_prefix" value="target/" /> -->

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="black">
        <color rgba="0.1 0.1 0.1 1" />
    </material>

    <!-- base link -->

    <link name="base_link">
        <!--  -->
    </link>

    <!-- shpere link -->

    <joint name="base_sphere_joint" type="fixed">

        <parent link="base_link" />
        <child link="sphere_link" />
        <origin xyz="0 0 0" />

    </joint>
    
    <link name="sphere_link">

        <visual>
            <geometry>
                <sphere radius="0.2" />
            </geometry>
            <material name="orange" />
        </visual>

        <collision>
            <geometry>
                <sphere radius="0.2" />
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="1.6" radius="0.2">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_sphere>

    </link>

    <gazebo reference="sphere_link">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- left wheel link -->

    <joint name="sphere_left_wheel_joint" type="continuous">

        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="0 0.22 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />

    </joint>

    <link name="left_wheel_link">

        <visual>
            <geometry>
                <cylinder radius="0.22" length="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.22" length="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.22">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="left_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <joint name="sphere_right_wheel_joint" type="continuous">

        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="0 -0.22 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />

    </joint>

    <link name="right_wheel_link">

        <visual>
            <geometry>
                <cylinder radius="0.22" length="0.04" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.22" length="0.04" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.5" length="0.04" radius="0.22">
            <origin xyz="0 0 0" rpy="0 0 0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="right_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>